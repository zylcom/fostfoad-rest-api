{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "outDir": "api",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "exclude": ["src/__test__", "prisma/seed.ts"],
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true
  }
}
